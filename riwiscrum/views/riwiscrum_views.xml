<odoo>
    <record id="view_riwiscrum_list" model="ir.ui.view">
        <field name="name">riwiscrum.list</field>
        <field name="model">riwiscrum</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="required_by"/>
                <field name="accepted_by"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_riwiscrum_form" model="ir.ui.view">
        <field name="name">riwiscrum.form</field>
        <field name="model">riwiscrum</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar"/>
                    <button name='review' confirm="¿Desea cambiar el estado a review?" string="Review" type="object" class="oe_highlight" invisible="status == 'review' or status in ['accepted','refused','cancel']"/>
                    <button name='draft' confirm="¿Desea cambiar el estado a borrador?" string="Borrador" type="object" class="oe_highlight" invisible="status == 'draft' or status in ['accepted','refused','cancel']"/>
                    <button name='running' confirm="¿Desea cambiar el estado a ejecución?" string="En ejecución" type="object" class="oe_highlight" invisible="status == 'running' or status in ['accepted','refused','cancel']"/>
                    <button name='paused' confirm="¿Desea cambiar el estado a pausa?" string="Pausado" type="object" class="oe_highlight" invisible="status == 'paused' or status in ['accepted','refused','cancel']"/>
                    <button name='accepted' confirm="¿Desea cambiar el estado a aceptado?" string="Aceptado" type="object" class="oe_highlight" invisible="status == 'accepted' or status in ['accepted','refused','cancel']"/>
                    <button name='refused' confirm="¿Desea cambiar el estado a rechazado?" string="Rechazado" type="object" class="oe_highlight" invisible="status == 'refused' or status in ['accepted','refused','cancel']"/>
                    <button name='cancel' confirm="¿Desea cambiar el estado a cancelado?" string="Cancelado" type="object" class="oe_highlight" invisible="status == 'cancel' or status in ['accepted','refused','cancel']"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="ACEPTADO" bg_color="text-bg-success" invisible="status != 'accepted'"/>
                    <widget name="web_ribbon" title="RECHAZADO" bg_color="text-bg-danger" invisible="status != 'refused'"/>
                    <widget name="web_ribbon" title="CANCELADO" bg_color="text-bg-danger" invisible="status != 'cancel'"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Proyecto..."/>
                        </h1>
                    </div>
                    <group>
                        <field name="required_by"/>
                        <field name="accepted_by"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page name="tarea" string="Tareas">
                        <field name="line_ids">
                            <list editable="bottom">
                                <field name="tipo_tarea" />
                                <field name="asignado_a_ids" widget="many2many_tags" />
                                <field name="fecha_inicio" />
                                <field name="fecha_fin" />
                                <field name="prioridad" widget="priority" />
                                <field name="tiempo_estimado" widget="float_time" />
                                <field name="status" optional="show" />
                            </list>
                        </field>
                        </page>
                        <page name="seguimiento" string="Seguimiento">
                            <group>
                                <group>
                                    <field name="fecha_review"/>
                                    <field name="fecha_running"/>
                                    <field name="fecha_paused"/>
                                </group>
                                <group>
                                    <field name="fecha_accepted"/>
                                    <field name="fecha_refused"/>
                                    <field name="fecha_cancel"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_riwiscrum" model="ir.actions.act_window">
        <field name="name">Riwiscrum</field>
        <field name="res_model">riwiscrum</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_riwiscrum_root" name="Riwiscrum" sequence="10"/>
    <menuitem id="menu_riwiscrum_main" name="Registros" parent="menu_riwiscrum_root" action="action_riwiscrum" sequence="10"/>
</odoo>
